<div class="row" id="preview_header_row">
	{{#if message}}
		<script> 
			$.bootstrapGrowl("{{message}}", {type: '{{message_type}}',offset: {from: 'top', amount: 10},align: 'center',width: 400,delay: 2000});
		</script>
	{{/if}}	
	<div class="col-lg-12">
		<h1 class="page-header">Preview</h1>
		<ol class="breadcrumb">
			<li><a href="/admin/posts">Home</a></li>
			<li class="active">Preview</li>
			<li><a href="/admin/editor/{{post_id}}">Editor</a></li>
		</ol>
	</div>
</div>
<div class="row">
	<div class="col-lg-12 col-md-12">
		<div id="preview_panel" class="chat-panel panel panel-default">
			<div class="panel-heading">
				Preview
				<div class="btn-group pull-right">
					<a href="/admin/editor/{{this.post_id}}"><span class="pull-right glyphicon glyphicon-pencil" style="color: black; padding-top: 5px;"></span></a>
				</div>
			</div>
			<div id="preview_body" class="panel-body">
				<ul id="post_preview_body" class="chat">
					<li><h2>{{post_title}}</h2></li>
					<li>{{{post_body}}}</li>
					<p class="pull-left">
					{{#each post_tags}}
						<span class="tags"><a href="/tag/{{this}}">{{this}}</a></span>
						<span class="spacer">|</span> 
					{{/each}}
					</p>
				</ul>
			</div>
		</div>
	</div>
</div>