<div class="row" id="editor_header_row">
	{{#if message}}
		<script> 
			$.bootstrapGrowl("{{message}}", {type: '{{message_type}}',offset: {from: 'top', amount: 10},align: 'center',width: 400,delay: 2000});
		</script>
	{{/if}}
	<div class="col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10">
		<h1 class="page-header">Settings</h1>
	</div>	
</div>
<div class="row">
	<div class="col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10">
		<div class="panel panel-default">
			<div class="panel-heading">
				<span><b>Settings</b></span>
			</div>
			<div class="panel-body">
				<div class="col-lg-12">
					<div class="table-responsive">
						<table class="table table-condensed" >
							<th></th>
							<th>Menu</th>
							<th>Link</th>
							<th></th>
							<tbody id="draggable_list">
								{{#each navigation}}
									<tr>
										<form method="post" action="navigation_save_values">
										<input type="hidden" class="nav_id" name="nav_id" value="{{_id}}">
										<td class="dragable_item col-md-1 td-pad"><i class="fa fa-arrows"></i></td>
										<td class="dragable_item col-md-2">
											<input type="text" class="form-control input-sm test" name="nav_menu" value="{{nav_menu}}">
										</td>
										<td class="dragable_item col-md-6">
											<input type="text" class="form-control input-sm test" name="nav_link" value="{{nav_link}}">
										</td>
										<td class="col-md-2">
											<a class="btn btn-danger btn-sm" href="/admin/navigation/delete/{{_id}}">
												<i class="fa fa-trash-o"></i>
											</a>	
											<button type="submit" class="btn btn-success btn-sm">
												<i class="fa fa-floppy-o"></i>
											</button>
										</td>
										</form>
									</tr>
								{{/each}}
									<tr>
										<form method="post" action="navigation_add_new">
										<td class="dragable_item col-md-1"></td>
										<td class="dragable_item col-md-2">
											<input type="text" class="form-control input-sm test" name="nav_menu">
										</td>
										<td class="dragable_item col-md-6">
											<input type="text" class="form-control input-sm test" name="nav_link">
										</td>
										<td class="col-md-2">
											<button type="submit" class="btn btn-success btn-sm">
												<i class="fa fa-plus"></i>
											</button>
										</td>
										</form>
									</tr>						
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>