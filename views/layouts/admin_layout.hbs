<!DOCTYPE html>
<html>
	<head>
		<title>{{title}}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
		<link rel="stylesheet" href='/stylesheets/bootstrap-markdown.min.css' />
		<link rel="stylesheet" href='/stylesheets/bootstrap-tokenfield.min.css' />
		<link rel="stylesheet" href='/stylesheets/bootstrap-select.min.css' />
		<link rel="stylesheet" href='/stylesheets/jquery.datetimepicker.css' />
		<link rel='stylesheet' href='/stylesheets/admin.css' />
		<link rel='stylesheet' href='/stylesheets/style.css' />
		<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css" rel="stylesheet">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.7.0/moment.min.js"></script>
		<script src="/javascripts/jquery.bootstrap-growl.js" type="text/javascript"></script>
		<script src="/javascripts/bootstrap-markdown.js"></script>
		<script src="/javascripts/bootstrap.min.js"></script>
		<script src="/javascripts/bootstrap-tokenfield.js"></script>
		<script src="/javascripts/bootstrap-select.min.js"></script>
		<script src="/javascripts/textarea-resizer.js"></script>
		<script src="/javascripts/jquery.validate.min.js"></script>
		<script src="/javascripts/userform.validation.js"></script>
		<script src="/javascripts/jquery.iframe-transport.js"></script>
		<script>
			$( document ).ready(function() {
				$('#frm_post_tags').tokenfield();
				$('.selectpicker').selectpicker();	
				$("#clear_logo").click(function() {
					window.location = "clearlogo";
				});
				$('#frm_datetimepicker').datetimepicker({ format: 'd/m/Y H:i' });
				$("#post_list_wrapper").resizer({offset_elements: ['#navbar','.panel-heading'],negative_padding: 48});
				$("#frm_post_body").markdown();
				$("#body_row").resizer({offset_elements: ['#navbar','.panel-heading','#title_row','#tags_row'],negative_padding: 60});
				$("#users_body_row").resizer({offset_elements: ['#navbar','.panel-heading'],negative_padding: 60});
				$("#frm_post_body").resizer({offset_elements: ['#navbar','.panel-heading','#title_row','#options_row','#tags_row'],negative_padding: 100});
				
				$(window).resize(function() {
					$("#frm_post_tags-tokenfield").css("width", "");
				});
				
				$('#edit_posts td, #edit_users td').on("click", function() {
					if($(this).attr('data-href') !== undefined || $(this).attr('data-href') != ""){
						document.location = $(this).attr('data-href');
					}else{
						return;
					}
				});
				
				$().user_validation("#user_form");
			});	
			
			function confirm_delete(post_id){
				var confirmed = confirm("Are you sure you want to delete this post forever?");
				if(confirmed){
					document.location = "/admin/deletepost/" + post_id;
				}
				return confirmed;
			}
		</script>
	</head>
	<body>    
    <div id="navbar" class="navbar navbar-inverse navbar-static-top">      
        <div class="container-fluid">
			<div class="navbar-header">
			  <a class="navbar-brand glyphicon glyphicon-home" href="/"></a>	
			  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			  </button>
			  <a class="navbar-brand" href="/admin">{{config.blog_title}}</a>
			</div>
			<div class="navbar-header pull-right">
			  <a id="nav-expander" class="nav-expander fixed">
				 <img src="/images/menu.png" height="25" width="30"><i class="fa fa-bars fa-lg white"></i>
			  </a>
			</div>
        </div>
    </div>
	{{{body}}}
	<script src="/javascripts/markdown.js"></script>
	<script src="/javascripts/to-markdown.js"></script>
	<script src="/javascripts/jquery.navgoco.js"></script>
	<script src="/javascripts/main.js"></script>
	<script src="/javascripts/jquery.datetimepicker.js"></script>
	<script>
		$(function () {
			$('#fileupload').fileupload({
				dataType: 'json',
				done: function (e, data) {
					$.each(data.result.files, function (index, file) {
						$('<p/>').text(file.name).appendTo(document.body);
					});
				}
			});
		});
	</script>
	</body>
</html>