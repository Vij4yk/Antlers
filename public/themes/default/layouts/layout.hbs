<!DOCTYPE html>
<html lang="en">
	<head>
		{{#if config.blog_title}}
			<title>{{config.blog_title}}</title>
		{{else}}
			<title>Antlers blog</title>
		{{/if}}
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<meta name="description" content="{{config.blog_description}}">
		<meta name="keywords" content="{{post_tags_meta}}">
		<meta name="robots" content="index,follow">
		<meta charset="UTF-8">
		<link rel='stylesheet' href='/themes/{{theme}}/css/bootstrap.min.css' />
		<link rel='stylesheet' href='/themes/{{theme}}/css/bootstrap-theme.min.css' />
		<link rel='stylesheet' href='/themes/{{theme}}/css/style.css' />
		<link rel="stylesheet" href="/themes/{{theme}}/css/prettify.css">
		<link rel="stylesheet" href='/stylesheets/font-awesome.min.css' />
		<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,800italic,400,700,800%7CGentium+Book+Basic:400,400italic,700,700italic" type="text/css">
		<link rel="shortcut icon" href="/themes/{{theme}}/favicon.ico" />
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
		<script src="/javascripts/bootstrap-responsive_img.js"></script>
		<!-- Open Graph meta -->
		<meta property="og:title" content="{{config.blog_title}}"/>
		<meta property="og:url" content="{{full_url}}"/>
		<meta property="og:site_name" content="{{config.blog_title}}"/>
		<meta property="og:type" content="article"/>
		<!-- Open Graph meta -->
		<!-- Google analytics -->
		{{#if config.blog_google_analytics}}
			{{{config.blog_google_analytics}}}
		{{/if}}
		<script>
			$( document ).ready(function() {
				$('#seo-options').collapse();
			});
		</script>
	</head>
	<body>
		<div class="container-fluid">
			<div class="col-xs-12 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
				<div class="row">
					<div class="welcome_header">
						<a href="/">
							{{#if config.blog_logo}}
								<img src="data:image/png;base64,{{config.blog_logo}}" alt="header" width="80">
							{{else}}
								<img src="/themes/{{theme}}/images/default_logo.jpg" alt="header" width="150">
							{{/if}}
						</a>
					</div>
					<div class="text-center">
						<ul class="list-inline navigation_menu">
							{{#each navigation}}
								<li>
									<a href="{{this.nav_link}}">{{this.nav_menu}}</a>

								</li>
								<li class="navigation_menu_seporator"></li>
							{{/each}}
						</ul>
					</div>
					{{{body}}}
					<div class="text-center">
						<ul class="pagination pagination-sm pagination-xs pagination-lg">
							{{#each pagination_array}}
								{{{this}}}
							{{/each}}
						</ul>
					</div>
				</div>
				<div class="row">
					<div class="text-center footer">
						<p class="footer-copyright">Copyright &copy; {{current_year}} &middot; All Rights Reserved &middot; <a href="{{config.blog_hostname}}">{{config.blog_title}}</a></p>
						<p class="footer-sharelinks">
							<a class="sharelink" href="{{config.blog_hostname}}/rss/feed.xml"><i class="fa fa-rss fa-lg" style="color:#FF6600"></i></a>
							<a class="sharelink" href="https://www.facebook.com/sharer/sharer.php?u={{config.blog_hostname}}"><i class="fa fa-facebook fa-lg" style="color:#3B5998"></i></a>
							<a class="sharelink" href="https://twitter.com/home?status={{config.blog_hostname}}"><i class="fa fa-twitter fa-lg" style="color:#4099FF"></i></a>
							<a class="sharelink" href="https://plus.google.com/share?url={{config.blog_hostname}}"><i class="fa fa-google-plus fa-lg" style="color:#DD4B39"></i></a>
						</p>
					</div>
				</div>
				<script src="/themes/{{theme}}/js/bootstrap.min.js"></script>
				<script src="/themes/{{theme}}/js/prettify.js"></script>
				<script src="/themes/{{theme}}/js/func.js"></script>
			</div>
		</div>
	</body>
</html>
