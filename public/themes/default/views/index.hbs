{{#each posts}}
	<h5 class="text-muted text-center">{{custom_date this.post_date "dddd, MMMM Do, YYYY"}}
	{{#ifCond ../is_logged_on '===' 'true'}}
		<a href="/admin/editor/{{this.post_id}}" class="glyphicon glyphicon-pencil edit-pencil"></a>
	{{/ifCond}}	
	</h5>
	<div class="row" style="padding-bottom: 30px;">
		<h2 class="text-center"><a class="post_title" href="/{{this.post_title_clean}}">{{this.post_title}}</a></h2>
	</div>
	<div class="row">
		{{{this.post_body}}}
	</div>
	<div class="text-center">
		<div class="social">
			<span class="twitter">
				<a href="http://twitter.com/share" class="twitter-share-button" data-url="{{../base_url}}/{{url_encode this.post_title}}">Tweet</a>
			</span>
			<span class="google">
				<g:plusone size="medium" href="{{../base_url}}/{{url_encode this.post_title}}"></g:plusone>
			</span>
			<span class="Facebook">
				<iframe src="https://www.facebook.com/plugins/like.php?href={{../base_url}}/{{url_encode this.post_title}}&show_faces=false&layout=button_count" scrolling="no" frameborder="0" style="height: 21px; width: 100px" allowTransparency="true"></iframe>
			</span>
		</div>
	</div>
	<div class="row" style="padding-top: 30px;">
		<h4 class="text-center"><a class="post_title" href="/{{this.post_title_clean}}"><span class="glyphicon glyphicon-comment"></span> Comment</a></h4>
	</div>
	<div class="row" style="padding-top: 30px;">
		<p class="pull-left">
			{{#each this.post_tags}}
				<span class="tags"><a href="/tag/{{this}}">{{this}}</a></span>
				<span class="spacer">|</span> 
			{{/each}} 
		</p>
	</div>
	<div class="row" style="padding-top: 30px;">
		<hr/>
	</div>
{{/each}} 
