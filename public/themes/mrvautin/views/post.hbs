<div class="row">    
	<div class="col-md-10 col-md-offset-2">
		<h4>{{format_date post_date}} <span class="text-muted">BY {{post_owner}}</span>
			{{#ifCond is_logged_on "===" "true"}} 
				<a href="/admin/editor/{{this.post_id}}" class="glyphicon glyphicon-pencil edit-pencil"></a>
			{{/ifCond}}	
		</h4>
	  <h2>{{post_title}}</h2><br/>
	  <div class="row">
			<div class="col-xs-9">
				<p>{{{post_body}}}</p><br/>
				<p class="pull-left">
					{{#each this.post_tags}}
						<span class="tags"><a href="/tag/{{this}}">{{this}}</a></span>
						<span class="spacer">|</span> 
					{{/each}} 
			</div>
	
	  </div>
		<script type="text/javascript">
			var disqus_shortname = 'mrvautin'; // required: replace example with your forum shortname
			(function() {
				var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
				dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
				(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
			})();
		</script>
		<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
		<a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
	</div>
</div>
<hr/>
