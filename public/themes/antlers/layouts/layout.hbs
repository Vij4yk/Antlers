<!DOCTYPE html>
<html>
	<head>
		<title>{{config.blog_title}}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<link rel='stylesheet' href='/themes/{{theme}}/css/bootstrap.min.css' />
		<link rel='stylesheet' href='/themes/{{theme}}/css/bootstrap-theme.min.css' />
		<link rel='stylesheet' href='/themes/{{theme}}/css/style.css' />
		<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,800italic,400,700,800|Gentium+Book+Basic:400,400italic,700,700italic" type="text/css">
		<link rel="shortcut icon" href="/themes/{{theme}}/favicon.ico" />
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
		<script src="https://apis.google.com/js/platform.js" async defer></script>
		<script>(function(d, s, id) {var js, fjs = d.getElementsByTagName(s)[0];if (d.getElementById(id)) return;js = d.createElement(s); js.id = id;js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=476789989114200&version=v2.0";fjs.parentNode.insertBefore(js, fjs);}(document, 'script', 'facebook-jssdk'));</script>
		<script src="/javascripts/bootstrap-responsive_img.js"></script>
		<script>
			$(document).ready(function() {
				responsive_image("#body_section img");
			});
		</script>
		<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
		{{#if config.blog_google_analytics}}
			{{{config.blog_google_analytics}}}
		{{/if}}
	</head>
	<body>
		<div class="container-fluid">
			<div class="col-xs-12 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
				<div class="row">
					<div class="welcome_header">
						<a href="/">
							{{#if config.blog_logo}}					
								<img src="data:image/png;base64,{{config.blog_logo}}" width="150px" height="150px">
							{{else}}
								<img src="/themes/{{theme}}/images/default_logo.png" width="150px" height="150px">
							{{/if}}
						</a>
					</div>
					{{{body}}}
					<div class="text-center">
						<ul class="pagination pagination-sm pagination-xs pagination-lg">
							{{#each pagination_array}}
								{{{this}}}
							{{/each}}
						</ul>
					</div>
				</div>
				<script src="/themes/{{theme}}/js/bootstrap.min.js"></script>
			</div>
		</div>
	</body>
</html>